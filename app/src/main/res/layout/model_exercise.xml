<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/modelViewQuestion_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="left|top|start"
            android:textColor="#050505"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:text="Full Question "
            android:padding="5dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/modelButtonTranslator_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:inputType="textMultiLine"
                android:gravity="center"
                android:textColor="#030303"
                android:textAllCaps="false"
                android:background="@drawable/comment_black_24dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="17sp"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/modelButtonQuestion_id"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="40dp"
                android:inputType="textMultiLine"
                android:gravity="center"
                android:textColor="#070707"
                android:textAllCaps="false"
                android:text="See answer"
                android:background="#FAFCFC"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="17sp"
                android:padding="5dp"
                />
            <Button
                android:id="@+id/modelButtonShare_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:inputType="textMultiLine"
                android:gravity="center"
                android:textColor="#030303"
                android:textAllCaps="false"
                android:background="@drawable/ic_menu_share"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="17sp"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/modelButtonSpeech_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:inputType="textMultiLine"
                android:gravity="center"
                android:textColor="#030303"
                android:textAllCaps="false"
                android:background="@drawable/speeker"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="17sp"
                android:padding="5dp"
                />


        </LinearLayout>




    </LinearLayout>



</androidx.cardview.widget.CardView>