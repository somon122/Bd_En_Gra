<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Features.grammar.GrammarReadActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/grammarReadToolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grammarTitleReadView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#000"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grammarReadToolbar_id" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/grammarBottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grammarTitleReadView_id">

        <TextView
            android:id="@+id/grammarFullReadView_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left|start|top"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:text="Full Composition"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="17sp" />

    </ScrollView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/grammarBottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navi_buttom_menu" />


    <LinearLayout
        android:id="@+id/grammarCommentBoxSection_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/splash_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/grammarCommentTitle_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="5dp"

            />

        <EditText
            android:id="@+id/grammarCommentBody_id"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:textColor="#fff"
            android:gravity="left|start|top"
            android:hint="Enter your Comment"
            android:inputType="textMultiLine"
            android:padding="5dp"

            />

        <ProgressBar
            android:id="@+id/grammarCommentProgressBar_id"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />


        <Button
            android:id="@+id/grammarCommentSentButton_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#fff"
            android:text="Submit"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAllCaps="false"
            android:textColor="#0686F1"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/grammarCommentNotNowButton_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/splash_screen"
            android:text="Not now ?"
            android:textAllCaps="false"
            android:textColor="#F8F9FA"
            android:textSize="20sp"

            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>