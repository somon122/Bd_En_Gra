<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Features.comment.CommentFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentRecyclerView_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="7dp"
        app:layout_constraintBottom_toTopOf="@+id/commentBoxShowButton_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/commentBoxSection_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/splash_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/commentTitle_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:gravity="left|start|top"
            android:hint="Enter Comment Title"
            android:inputType="textMultiLine"
            android:padding="5dp"

            />

        <EditText
            android:id="@+id/commentFullT_id"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:textColor="#fff"
            android:gravity="left|start|top"
            android:hint="Enter your Comment"
            android:inputType="textMultiLine"
            android:padding="5dp"

            />

            <Button
                android:id="@+id/commentSentButton_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="#fff"
                android:text="Submit"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAllCaps="false"
                android:textColor="#0686F1"
                android:textSize="20sp"

                />

            <Button
                android:id="@+id/commentNotNowButton_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/splash_screen"
                android:text="Not now ?"
                android:textAllCaps="false"
                android:textColor="#F8F9FA"
                android:textSize="20sp"

                />




    </LinearLayout>


    <Button
        android:id="@+id/commentBoxShowButton_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#0686F1"
        android:text="Add new comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/commentProgressBar_id"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />


</androidx.constraintlayout.widget.ConstraintLayout>